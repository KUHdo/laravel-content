{
    "name": "kuhdo/laravel-content",
    "description": "Content",
    "type": "library",
    "keywords": [
        "kuhdo",
        "laravel",
        "laravel-content"
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.0",
        "nunomaduro/larastan": "^1.0",
        "orchestra/testbench": "^6.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "KUHdo GmbH",
            "email": "dev@kuhdo.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "KUHdo\\Content\\": "src",
            "KUHdo\\Content\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KUHdo\\Content\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyze": "vendor/bin/phpstan analyze --xdebug",
        "lint": "vendor/bin/phpcs .",
        "lintfix": "vendor/bin/phpcbf src tests",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "KUHdo\\Content\\ContentServiceProvider"
            ],
            "aliases": {
                "Content": "KUHdo\\Content\\Facades\\Content"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
